<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.UnguidedFragment">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gdUnguidedTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gdUnguidedRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewMusic"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@+id/gdUnguidedBottom"
        app:layout_constraintEnd_toStartOf="@+id/gdUnguidedRight"
        app:layout_constraintStart_toStartOf="@+id/gdUnguidedLeft"
        app:layout_constraintTop_toTopOf="@+id/gdHeading" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gdUnguidedLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05109489" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gdUnguidedBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gdHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.13" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/luckiestguy_regular"
        android:gravity="center"
        android:text="UNGUIDED MEDITATION"
        android:textColor="@color/primary"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/gdHeading"
        app:layout_constraintEnd_toStartOf="@+id/gdUnguidedRight"
        app:layout_constraintStart_toStartOf="@+id/gdUnguidedLeft"
        app:layout_constraintTop_toTopOf="@+id/gdUnguidedTop" />
</androidx.constraintlayout.widget.ConstraintLayout>